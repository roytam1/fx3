DEPTH		= ../../../..

REQUIRES	= softupdt zlib

CSRCS		= nsdiff.c crc32.c

COPY		= cp -p

PROGRAM		= nsdiff$(BIN_SUFFIX)

include $(DEPTH)/config/rules.mk

symbols:
	@echo "CSRCS	= $(CSRCS)"
	@echo "OBJS	= $(OBJS)"
	@echo "PROGRAM	= $(PROGRAM)"
	@echo "LIBRARY	= $(LIBRARY)"
	@echo "TARGETS	= $(TARGETS)"

crc32.c:  $(DEPTH)/modules/zlib/src/crc32.c
	@$(RM) $@
	@$(COPY) $< $@
